{
  "name": "cypress-simple-ci-report",
  "version": "1.0.0",
  "description": "Simple Cypress project",
  "main": "index.js",
  "devDependencies": {
    "cypress": "^9.7.0",
    "cypress-multi-reporters": "^1.4.0",
    "mocha": "^8.0.1",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.1.0",
    "mochawesome-report-generator": "^5.1.0"
  },
  "scripts": {
    "test": "cypress run",
    "test:chrome": "cypress run --browser chrome",
    "report:merge": "mochawesome-merge cypress/results/json/*.json > public/cypress_results/index.json",
    "report:generate": "marge public/cypress_results/index.json --reportDir public/cypress_results --assetsDir public/cypress_results/assets --reportPageTitle index.html",
    "posttest": "mkdir -p public/$(date +'%Y%m%d_%H%M%S') && mv cypress/results public/$(date +'%Y%m%d_%H%M%S')"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rahul8436/Cypress-Report.git"
  },
  "author": "Rahul Kundu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rahul8436/Cypress-Report/issues"
  },
  "homepage": "https://github.com/rahul8436/Cypress-Report#readme"
}
